NODE_ENV=development
PORT=5000

# MongoDB
MONGODB_URI=mongodb://localhost:27017/quad
# Or use MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/quad

# JWT
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
